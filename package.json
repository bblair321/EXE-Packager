{
  "name": "exe-packager",
  "version": "1.0.0",
  "description": "Universal toolkit for creating executables and self-extracting archives",
  "main": "gui/main.js",
  "scripts": {
    "test": "echo \"No tests specified\" && exit 0",
    "install-tools": "npm install -g pkg electron-builder",
    "example:node": "node scripts/package-exe.js node --help",
    "example:files": "node scripts/pack-files.js --help",
    "gui": "electron gui/main.js",
    "gui:dev": "NODE_ENV=development electron gui/main.js",
    "build:gui": "electron-builder",
    "build:gui:win": "electron-builder --win",
    "dev:reset-all": "node scripts/clean-dist.js"
  },
  "keywords": [
    "executable",
    "packaging",
    "pkg",
    "electron",
    "pyinstaller",
    "self-extracting",
    "installer"
  ],
  "author": "bblair321",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "archiver": "^6.0.1",
    "archiver-utils": "^4.0.1",
    "cli-progress": "^3.12.0",
    "ora": "^9.0.0",
    "rcedit": "^3.0.1",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^25.1.8",
    "pkg": "^5.8.1"
  },
  "bin": {
    "exe-pack": "scripts/package-exe.js",
    "file-pack": "scripts/pack-files.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.exe-packager.gui",
    "productName": "EXE Packager",
    "directories": {
      "output": "dist-gui"
    },
    "files": [
      "gui/**/*",
      "scripts/**/*",
      "installer-gui-template.js",
      "configs/**/*",
      "package.json",
      "!node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/**/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/.{bin,eslintrc,nyc_output}",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.{bin,eslintrc,nyc_output}",
      "node_modules/**/*"
    ],
    "win": {
      "target": "portable",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
